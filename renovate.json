{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "semanticCommitType": "ci",
      "semanticCommitScope": "deps"
    },
    {
      "matchDatasources": ["maven-wrapper"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "build"
    },
    {
      "matchManagers": ["maven"],
      "matchDepTypes": ["plugin"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "build"
    },
    {
      "matchPackageNames": [
        "com.puppycrawl.tools:checkstyle",
        "com.github.spotbugs:*",
        "com.google.errorprone:*",
        "com.uber.nullaway:*",
        "org.mockito:*",
        "org.assertj:*"
      ],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps-lint"
    },
    {
      "matchPackageNames": [
        "org.mockito:*",
        "org.assertj:*"
      ],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps-test"
    }
  ]
}
